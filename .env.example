# DataBridge Environment Configuration

# Application Settings
APP_NAME=DataBridge
APP_ENV=development

# Logging Configuration
# Options: debug, info, warn, error
LOG_LEVEL=info

# API Server
API_PORT=8080
API_HOST=0.0.0.0

# Data Storage
DATA_DIR=./data
FLOWFILE_DIR=./data/flowfiles
CONTENT_REPO_DIR=./data/content

# Database Settings
DB_TYPE=badger
DB_PATH=./data/flowfiles

# Scheduler Settings
WORKER_POOL_SIZE=10
MAX_CONCURRENT_TASKS=100

# Flow Controller Settings
DEFAULT_SCHEDULE_INTERVAL=5s
ENABLE_AUTO_TERMINATE=true

# Monitoring
ENABLE_METRICS=true
METRICS_INTERVAL=10s

# Security (for future use)
# ENABLE_AUTH=false
# JWT_SECRET=change-me-in-production
# CORS_ORIGINS=http://localhost:3000

# Frontend URL
FRONTEND_URL=http://localhost:3000
